{
  "manifest_version": 3,
  "name": "AI Question Helper",
  "version": "1.0.0",
  "description": "Scans webpages for questions and highlights answers using AI",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
  "https://api.openai.com/*",
  "https://api.groq.com/*"
]
}